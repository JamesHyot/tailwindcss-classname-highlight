{
  "publisher": "hyoban",
  "name": "tailwindcss-classname-highlight",
  "displayName": "Tailwind CSS ClassName Highlight",
  "version": "0.2.0",
  "private": true,
  "packageManager": "pnpm@8.15.3",
  "description": "",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/tailwindcss-classname-highlight#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/hyoban/tailwindcss-classname-highlight"
  },
  "bugs": {
    "url": "https://github.com/hyoban/tailwindcss-classname-highlight/issues"
  },
  "categories": ["Other"],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": ["dist"],
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "workspaceContains:**/tailwind.config.ts",
    "workspaceContains:**/tailwind.config.js",
    "workspaceContains:**/tailwind.config.cjs",
    "workspaceContains:**/tailwind.config.mjs"
  ],
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "pnpm build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "pnpm build",
    "prepare": "simple-git-hooks",
    "publish": "vsce publish --no-dependencies -p $VSCODE_EXTENSION_TOKEN",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.6",
    "@types/node": "18.19.17",
    "@types/vscode": "1.84.0",
    "@vscode/vsce": "^2.23.0",
    "eslint": "^8.56.0",
    "eslint-config-hyoban": "^0.1.8",
    "fast-glob": "^3.3.2",
    "lint-staged": "^15.2.2",
    "micromatch": "^4.0.5",
    "simple-git-hooks": "^2.9.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "hooks": {
      "before:init": ["pnpm run lint", "pnpm run typecheck"],
      "before:release": "pnpm run publish"
    },
    "npm": {
      "publish": false
    }
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
