{
  "publisher": "hyoban",
  "name": "tailwindcss-classname-highlight",
  "displayName": "Tailwind CSS ClassName Highlight",
  "version": "0.3.3",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "description": "",
  "author": "Stephen Zhou <hi@hyoban.cc>",
  "license": "MIT",
  "homepage": "https://github.com/hyoban/tailwindcss-classname-highlight#readme",
  "repository": "hyoban/tailwindcss-classname-highlight",
  "bugs": {
    "url": "https://github.com/hyoban/tailwindcss-classname-highlight/issues"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "res/icon.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.84.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Tailwind CSS ClassName Highlight",
      "properties": {
        "tailwindcss-classname-highlight.cssPath": {
          "description": "The path to the tailwindcss style file. (v4 only)",
          "type": "string"
        }
      }
    },
    "commands": [
      {
        "command": "tailwindcss-classname-highlight.reload",
        "title": "Tailwind CSS ClassName Highlight: Reload"
      }
    ]
  },
  "scripts": {
    "build": "tsup src/index.ts --external vscode",
    "dev": "pnpm build --watch",
    "lint": "eslint .",
    "pack": "vsce package --no-dependencies",
    "prepare": "simple-git-hooks",
    "publish": "vsce publish --no-dependencies -p $VSCODE_EXTENSION_TOKEN",
    "release": "release-it",
    "test": "vitest",
    "typecheck": "tsc",
    "vscode:prepublish": "pnpm build"
  },
  "devDependencies": {
    "@types/micromatch": "^4.0.6",
    "@types/node": "20.11.19",
    "@types/vscode": "1.84.0",
    "@vscode/vsce": "^2.24.0",
    "eslint": "^8.57.0",
    "eslint-config-hyoban": "^0.1.27",
    "fast-glob": "^3.3.2",
    "ignore": "^5.3.1",
    "lint-staged": "^15.2.2",
    "local-pkg": "^0.5.0",
    "micromatch": "^4.0.5",
    "release-it": "^17.1.1",
    "release-it-pnpm": "4.0.0-beta.1",
    "simple-git-hooks": "^2.10.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2",
    "vitest": "^1.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
